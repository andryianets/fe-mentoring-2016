    fieldset
        label Auth form
        form(name='loginForm', onsubmit='appMediator.tryLogin(this); return false;')
            .form-element
                label Login
                    input(type='text', name='login', required='required')
            .form-element
                label Pass
                    input(type='password', name='pass', required='required')
            .form-element
                button(type='submit') Login
                span or
                button(type='submit') Register


