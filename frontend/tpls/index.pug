doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no')

        title= htmlWebpackPlugin.options.title

        // Google + FA Fonts
        link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        // CSS Reset
        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
        // Milligram CSS minified
        //link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/milligram/1.2.4/milligram.min.css')



        style(type='text/css').
            .hidden {
                display: none;
            }
    body

        #startApp
            a.react-app(href='javascript:void(0)', onclick='loadAppModule("react");this.parentElement.removeChild(this);', title="Load React module...")
            a.angular-app(href='javascript:void(0)', onclick='loadAppModule("angular");this.parentElement.removeChild(this);', title="Load Angular module...")

        #reactRoot

        #angularRoot(ng-app='todoApp')
            toast
            .container(ui-view='')
