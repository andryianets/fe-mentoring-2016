fieldset
    h4 Auth form
    form(name='loginForm', onsubmit='appMediator.authFormSubmit(this); return false;')
        .form-element
            label Login
                input(type='text', name='login', required='required')
        .form-element
            label Pass
                input(type='password', name='pass', required='required')
        .form-element
            input(type='hidden', name='mode', value='login')
            button(type='submit', onclick='loginForm.mode.value="login"') Login
            button(type='submit', onclick='loginForm.mode.value="reg"') Register